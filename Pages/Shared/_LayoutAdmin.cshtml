@using Microsoft.AspNetCore.Identity
@using app_example.Models
@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>
    <script src="https://cdn.tailwindcss.com/3.4.1"></script>
</head>
<body class="flex flex-col min-h-screen bg-gray-50 text-gray-800">
    <!-- Fixed Header -->
    <header class="fixed top-0 left-0 w-full h-16 bg-white border-b z-50">
        @await Html.PartialAsync("_Header")
    </header>

    <!-- Fixed Sidebar -->
    <aside class="fixed top-16 left-0 w-56 h-[calc(100vh-4rem)] bg-gray-100 border-r p-4 space-y-2">
        <a asp-page="/Admin/Dashboard" class="block px-3 py-2 rounded hover:bg-gray-200 text-gray-700">Dashboard</a>
        <a asp-page="/Admin/WiiBand" class="block px-3 py-2 rounded hover:bg-gray-200 text-gray-700">WiiBand</a>
        <a asp-page="/Admin/Staff" class="block px-3 py-2 rounded hover:bg-gray-200 text-gray-700">Staff</a>
        <a asp-page="/Admin/Analytics" class="block px-3 py-2 rounded hover:bg-gray-200 text-gray-700">Analytics</a>
        <hr class="my-2" />
    </aside>

    <!-- Main Content -->
    <main class="ml-56 pt-16 h-screen overflow-y-auto">
        <div class="p-6">
            @RenderBody()
        </div>
    </main>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>

